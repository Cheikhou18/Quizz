{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
    <div class="d-flex flex-column justify-content-center align-items-center m-4 gap-2">
        <h3>Register</h3>

        <div class="d-flex flex-column gap-2">
            <div class="d-flex flex-column gap-1">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class' : 'border p-1'}}) }}
            </div>
            <div class="d-flex flex-column gap-1">
                {{ form_label(registrationForm.password) }}
                {{ form_widget(registrationForm.password, {'attr': {'class' : 'border p-1'}}) }}
            </div>
            <button type="submit" class="border px-4 py-2">Register</button>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
