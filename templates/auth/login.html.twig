{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <form method="post" class="d-flex flex-column align-items-center m-4 gap-2">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h3>Sign in</h1>

        <div class="d-flex flex-column gap-2">
            <div class="d-flex flex-column gap-1">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="border" autocomplete="email" required autofocus>
            </div>

            <div class="d-flex flex-column gap-1">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="border" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>

            <button class="border px-4 py-2" type="submit">
                Sign in
            </button>
        </div>
    </form>
{% endblock %}
